<!DOCTYPE html>
html(lang="en")
    head
        meta(charset='UTF-8')
        meta(name='viewport', content='width=device-width, initial-scale=1.0')
        
        // Latest compiled and minified CSS
        link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css')
        // jQuery library
        script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js')
        // Popper JS
        script(src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js')
        // Latest compiled JavaScript
        script(src='https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js')
        
        block title

    body
        .container
            article.row.p-3
                section.col-sm-2.p-4
                    header
                        h1.display-4(style='font-size: 26px;')
                            | Bellekaza
                section.col-sm-6.pt-3
                    nav(aria-label='breadcrumb')
                        ol.breadcrumb
                            each subpath in path
                                if subpath.key == 'pmk'
                                    li.breadcrumb-item.active(aria-current='page')= subpath.name
                                else 
                                    li.breadcrumb-item
                                        a(href=subpath.path)= subpath.name

                            

                section.col-sm-4.pt-4.mt-2.display-4(style='font-size: 15px;')
                    a.text-dark(href="#")  Welcome
                    span /
                    a.text-dark(href="#")  change password 
                    span /
                    a.text-dark(href="#")  log out 
                
            article.row.p-3
                block content

        block footer